<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>

    <div class="container"> 
        <hr>
        <h1> Perguntas </h1>
        <hr>
        <a href="/perguntar" class="btn btn-warning">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer"></div>
                    <a href="/pergunta/<%=pergunta.id%>"><button class="btn btn-dark">Responder</button></a>
                    <hr>
                    <a href="/del-pergunta/<%=pergunta.id%>"><button class="btn btn-danger">Apagar Pergunta</button></a>
                    <hr>
            </div>
        <% }) %>

        
    </div>

    
</body>
<%- include("partials/footer.ejs") %>
